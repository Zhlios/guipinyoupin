page {
    height: 100%;
}

.container {
    background-color: #ffffff;
    justify-content: initial;
    height: auto;
}

.tixian-bg, .tixian-img {
    width: 100%;
    height: 500rpx;
}

.tixian-name {
    position: absolute;
    text-align: center;
    width: 100%;
    top: 210rpx;
    color: #fff;
    font-size: 30rpx;
}

.tixian-name .money {
    display: block;
    font-size: 60rpx;
    margin-top: 15px;
}

.tixian-name .tips {
    font-size: 24rpx;
    margin-top: 70rpx;
    display: block;
    color: rgba(255, 255, 255, .5);
}

form {
    width: 100%;
    background-color: #fff;
}

.row-wrap {
    width: 90%;
    line-height: 88rpx;
    font-size: 28rpx;
    margin-left: 20px;
}

.row-wrap .label {
    width: 100%;
    color: #333;
    font-size: 26rpx;
}

.lable-amount {
    float: left;
    font-size: 50rpx;
    margin-right: 11px;
    color: #333;
}

.lable-text {
    color: #b31d1d;
    font-size: 24rpx;
    margin: 20rpx;
    align-self: flex-start;
}

.row-wrap .label-right {
    height: 88rpx;
    line-height: 88rpx;
    border-bottom: 1px solid #f5f5f5;
}

.row-wrap .label-right input {
    height: 100%;
    float: left;
    width: 80%;
    padding: 5px 0;
    color: #333;
}

.row-wrap .label-right textarea {
    width: 100%;
    font-size: 14px;
    height: 300rpx;
    border-style: solid;
    border-width: 1px;
    border-color: #eee;
    border-radius: 6rpx;
    line-height: 20px;
    padding: 10rpx;
}

.row-wrap .right-box {
    margin-right: 30rpx;
}

.arrow-right {
    width: 15rpx;
    height: 24rpx;
}

.save-btn {
    width: 690rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    margin: 60rpx 0;
    border-radius: 6rpx;
    box-sizing: border-box;
    background-color: #b5272d;
    color: #fff;
    font-size: 30rpx;
}


button[type="default"] {
    background-color: #ffffff;
    color: #000;
    font-size: 30rpx;
}

.addr-details {
    height: auto;
    padding: 30rpx 0;
    margin-left: 30rpx;
    border-bottom: 1rpx solid #eee;
    display: flex;
    font-size: 28rpx;
}

.addr-details .label {
    margin: auto 0 auto 0;
    width: 160rpx;
    color: #000
}

.addr-details textarea {
    box-sizing: border-box;
    width: 480rpx;
    overflow: scroll;
}

picker {
    min-width: 20rpx;
    height: 100%;
    margin-right: 20rpx;
}

.picker {
    color: #999999;
}

.hui {
    color: #777;
}

.codeBtnNomarl {
    font-size: 12px;
    color: white;
    background-color: #F79044;
    width: 20%;
    border-radius: 10rpx;
    text-align: center;
    float: left;
}

.codeBtnSelect {
    font-size: 12px;
    color: #444;
    width: 20%;
    float: left;
    border-radius: 10rpx;
    text-align: center;
}
