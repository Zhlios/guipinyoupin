.share-button {
    height: 80rpx;
    width: 500rpx;
    margin: 0 auto;
    background: #ffe00d;
    text-align: center;
    position: fixed;
    bottom: 600rpx;
    left: calc(50vw - 250rpx);
    line-height: 80rpx;
    border-radius: 20rpx;
    letter-spacing: 3rpx;
    border: none;
    font-size: 28rpx;
    color: #ffffff;
}

button::after {
    border: none;
}
