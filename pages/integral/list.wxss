/* pages/integral/list.wxss */

.list-item {
	width: 330rpx;
	height: 480rpx;
	overflow: hidden;
  margin-bottom: 20rpx;
  background: white;
  border-radius: 10rpx;
}

.list-item image {
	width: 100%;
	height: 330rpx;
  border-radius: 6rpx;
  
}
.goods-list-title {
	font-size: 30rpx;
	color: #333;
	text-overflow: ellipsis;
	white-space: nowrap;
  overflow: hidden;
  line-height: 40rpx;
}

.goods-list-text {
	font-size: 24rpx;
	color: #999;
	text-overflow: ellipsis;
	white-space: nowrap;
  overflow: hidden;
  line-height: 40rpx;
}

.goods-list-money {
	font-size: 30rpx;
  color: #ab2b2b;
  line-height: 40rpx;
}

