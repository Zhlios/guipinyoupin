
.user-img {
    width: 70rpx;
    height: 70rpx;
    border-radius: 35rpx;
    margin-right: 10rpx;
    border: 1px dotted #d7d7d7;
    font-size: 14px;
    font-weight: bold;
    text-align: center;
    line-height: 70rpx;
    background-size: cover;
    color: #d7d7d7;
}

.spell-list {
    display: flex;
    align-items: center;
    padding-top: 30rpx;
    justify-content: center;
}

.user-name {
    padding-top: 110rpx;
    text-align: center;
}

.message {
    text-align: center;
    margin-top: 20rpx;
}

.goods-message-detail {
    height: 200rpx;
    background-color: #ffffff;
    padding: 0 15rpx;
    display: flex;
}

.goods-img {
    width: 200rpx;
    height: 100%;
}

.price-name {
    flex: 1;
    height: 100%;
    display: flex;
    padding-left: 20rpx;
    flex-direction: column;
    justify-content: space-between;
}

.bargain-price-message {
    text-align: center;
    padding: 20rpx;
}

.share-button {
    height: 80rpx;
    width: 70%;
    margin: 50rpx auto;
    background: #ffe00d;
    text-align: center;
    line-height: 80rpx;
    border-radius: 20rpx;
    letter-spacing: 3rpx;
    border: none;
}

button::after {
    border: none;
}
