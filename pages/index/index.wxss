page {
    background: #f2f2f2;
    overflow: hidden;
}

.mall-name {
    width: 80px;
    text-align: center;
    color: #ffffff;
    font-size: 16px;
    font-weight: bold;
}

.search-container {
    height: 50px;
    width: 100%;
    background-color: #3D8356;
    display: flex;
    align-items: center;
    padding-right: 20rpx;
}

.index-search {
    flex: 1;
    height: 40px;
    border-radius: 20px;
    background-color: #ffffff;
    display: flex;
    align-items: center;
    padding: 0 40rpx;
}

.swiper-container-bg {
    background-color: #3D8356;
    height: 160px;
    border-bottom-left-radius: 60rpx;
    border-bottom-right-radius: 60rpx;
}

.swiper-container {
    height: 350rpx;
    width: 100vw;
    margin-top: -155px;
}

.swiper-container .screen-swiper {
    height: 350rpx;
    width: 100%;
}

.screen-swiper image {
    width: 95%;
    border-radius: 40rpx;
    margin: 0 auto;
}

